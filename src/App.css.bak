.test {
  font-size: 20px;
  display: flex;
  justify-content: space-around;
}

.header {
  display: flex;
  /* align-items: center; */
  justify-content: space-between;
  padding: 0 10px;
}

.song-item {
  display: flex;
  align-items: flex-start;
  /* justify-content: space-between; */
}

.song-item > div {
  text-align: left; /* Ensure text is left-aligned */
}

.rank {
  width: 2ch; /* Fixed width for two characters */
  text-align: right;
}

.artist, .title, .songinfo {
  flex-grow: 1;
  margin: 0 10px; /* Add some spacing */
}

.artist {
  flex: 1; /* 1/5 of the container's width */
}

.title {
  flex: 2; /* 2/5 of the container's width */
}

.buttons {
  flex: 2;
  display: flex;
  margin-left: auto; /* Push to the right */
}

.buttons button {
  margin-left: 5px; /* Spacing between buttons */
}

.App {
  text-align: center;
}

.App-logo {
  height: 40vmin;
  pointer-events: none;
}

@media (prefers-reduced-motion: no-preference) {
  .App-logo {
    animation: App-logo-spin infinite 20s linear;
  }
}

